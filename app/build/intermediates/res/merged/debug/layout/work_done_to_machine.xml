<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/create_docket_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/red_dark"
        android:padding="5dp" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Work Done"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:text="(Fields Marked as * are Required)"
        android:textColor="@color/red_dark"
        android:textSize="14sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Work Carried out"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/work_carried_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/textview_border_white"
            android:hint="Work Carried Out"
            android:lines="3"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="top|left"
    		android:inputType="textMultiLine" 
            android:textSize="16sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Parts unable to find"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/parts_unable_to_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/radio_border"
            android:hint="Parts you are unable to find"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="End of Life"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_end_life"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="left"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/end_life_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/end_life_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="No"
                android:textSize="15sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="20dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/save_work_done"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/drawer_blue"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel_work_done"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/drawer_blue"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>