<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/create_docket_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/red_dark"
        android:padding="5dp" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Add Spare Part"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/mandtory_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="(Fields Marked as * are Required)"
            android:textColor="@color/red_dark"
            android:textSize="14sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/scan_barcode_spare_parts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/mandtory_string"
            android:background="@color/drawer_blue"
            android:padding="10dp"
            android:text="Scan Barcode"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Spare Parts Name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.app.customview.CustomAutoCompleteView
            android:id="@+id/spare_parts_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/textview_border_white"
            android:completionThreshold="3"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" >
        </com.app.customview.CustomAutoCompleteView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/radio_border"
            android:drawableRight="@drawable/arrow"
            android:editable="false"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/layout_border_grey"
            android:editable="false"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/red_star_button"
            android:gravity="center"
            android:padding="20dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/save_spare_parts"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/drawer_blue"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel_spare_parts"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/drawer_blue"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
    </ScrollView>

</LinearLayout>