<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/machine_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/machine_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red_dark"
                    android:padding="7dp"
                    android:text="VIPER DR1500 DH-EV BUFFER"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/serial_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Serial No"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/serial_no_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="00927472011"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/qr_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="QR Code"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/qr_code_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="14005244"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/associated_sites"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Associated Sites"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/associated_sites_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="SuperValu Malahide"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/manufacturer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Manufacturer"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/manufacturer_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="VIPER"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/machine_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Machine Type"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/machine_type_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Single Disc Machine"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/model_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Model"
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_selector"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/drawer_blue"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/machine_history_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_selector"
            android:padding="10dp"
            android:text="Machine History"
            android:textColor="@color/drawer_blue"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:id="@+id/machine_history_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/site_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="10dp"
                android:text="Site Name"
                android:textColor="@color/drawer_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assigned_on"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Assigned On"
                android:textColor="@color/drawer_blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nodataMachineHistory"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="@color/drawer_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/machine_history_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/service_history_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_selector"
            android:padding="10dp"
            android:text="Service History"
            android:textColor="@color/drawer_blue"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nodataServiceHistory"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="@color/drawer_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_scroll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/service_history_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>