<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/serial_no_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_border_transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="27458756"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/error_code_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_border_transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="113"
            android:textColor="@color/black"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/model_id"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_border_transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="model"
            android:textColor="@color/black"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/machine_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_border_transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="manufacturer name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:background="@drawable/layout_border_transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="This is a description"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>