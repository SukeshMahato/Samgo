<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="450dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/add_machine_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_dark"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back_button"
                android:padding="10dp"
                android:text="Edit Machine Details"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/voltage"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:text="Voltage"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioVoltage"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/voltage_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/voltage_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/suction"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:text="Suction"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioSuction"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/suction_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/suction_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/traction"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:text="Traction"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioTraction"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/traction_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/traction_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/water"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:text="Water"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioWater"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/water_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/water_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:drawableLeft="@drawable/spareparts"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:text="Spare Parts"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioSpareParts"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/spare_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/spare_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/machine_manufacturer"
                android:drawablePadding="30dp"
                android:padding="10dp"
                android:text="Visual Inspection"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/visual_inspection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_border"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/arrow_2"
                android:padding="10dp"
                android:text="Select Visual Inspection"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/traction"
                android:drawablePadding="30dp"
                android:padding="10dp"
                android:text="Marks Avail"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/marks_avail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_border"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/arrow_2"
                android:padding="10dp"
                android:text="Select Marks Avail"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/select_machine"
                android:drawablePadding="30dp"
                android:padding="13dp"
                android:text="Working Order"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/good_working_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_border"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/arrow_2"
                android:padding="13dp"
                android:text="Select Good Working Order"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/machine_model"
                android:drawablePadding="30dp"
                android:padding="10dp"
                android:text="Manufacturer Year"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/manufacturer_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/radio_border"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/arrow_2"
                android:padding="10dp"
                android:text="Select Manufacturer Year"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/drawer_blue"
                android:drawablePadding="30dp"
                android:padding="10dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>