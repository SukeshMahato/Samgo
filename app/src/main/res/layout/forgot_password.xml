<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/forgot_password_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/red_dark"
        android:padding="5dp" >

        <TextView
            android:id="@+id/forgot_password_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="FOrgot Password"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_header"
        android:orientation="vertical"
        android:padding="5dp" >

        <EditText
            android:id="@+id/forgot_password_section"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border_white"
            android:gravity="left"
            android:hint="Enter Email Address"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/forgot_required"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="385dp"
            android:layout_marginTop="10dp"
            android:background="@color/drawer_blue"
            android:padding="5dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>