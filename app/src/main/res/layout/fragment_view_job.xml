<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/start_job_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_background_selector"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Job"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_job_header" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/first_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/client_name"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:padding="20dp"
                    android:text="Client Name: ecs pvt ltd SAM"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/site_name"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:padding="20dp"
                    android:text="Job Date: 07-03-16"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_wrapper"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contractor_name"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:padding="20dp"
                    android:text="Site Address: eceltic-test"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/site_address"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:padding="20dp"
                    android:text="Due Date: 10-03-16"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_wrapper"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/site_manager_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:padding="20dp"
                    android:text="Admin Comments :"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/admin_comments_section"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/text_area_border"
                    android:hint="admin comments"
                    android:padding="20dp"
                    android:singleLine="false"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_details_header_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_wrapper"
                android:background="@color/light_blue"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/serial_no"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Serial No."
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/error_code"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Error Code"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6"
                    android:background="@drawable/textview_border"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:text="Description"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_details_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_details_header_wrapper"
                android:background="@color/light_blue"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/serial_no_text"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="27458756"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/error_code_text"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="113"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@drawable/textview_border"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:text="This is a description"
                    android:textColor="@color/drawer_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/tasks_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/upload_picture"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/cancel_button_border"
                        android:padding="10dp"
                        android:text="Upload Picture"
                        android:textColor="@color/drawer_blue"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/work_done"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/work_done_button"
                        android:padding="10dp"
                        android:text="Work Done"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>