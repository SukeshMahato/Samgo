<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/delete_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/drawer_blue"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:padding="10dp"
            android:text="Delete Previous Data"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/delete_text"
        android:layout_width="600dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="It is available for you to delete your data, keep updated with new data in your mobile, updated docket details,updated jobs details, updated list of machines, trainings etc.So delete all the previous data of local mobile database server which can help you make your work well organized.\n Note:This process will lost the todays ongoing process. So try to avail this function on the begining of the day."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete_data"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:background="@color/drawer_blue"
        android:gravity="center"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>