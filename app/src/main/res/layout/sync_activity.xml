<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_machine_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/drawer_blue"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:padding="10dp"
            android:text="Sync Data"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/synctext"
        android:layout_width="600dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="It is available for you to sync your data, keep updated, create docket,update jobs details, create list of machines, trainings etc. Moreover, it saves photo also.So sync all the updated data with centralized server which can help you make your work well organized."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sync"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:background="@color/drawer_blue"
        android:gravity="center"
        android:text="Sync All Data"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>